<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SettingsFragment" >

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="@string/borrar_cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeEmailButton"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/cambiar_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccountButton" />

    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/cambiar_contrase_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeEmailButton" />

    <Button
        android:id="@+id/showButton"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/mostrar_datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePasswordButton" />
</androidx.constraintlayout.widget.ConstraintLayout>